<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trace Mc</title>
    <link rel="icon" type="image/png" href="media/favicon.png">
    <link rel="stylesheet" href="css/register.css" />
  </head>
  <body>
    <div class="box">
      <h1 class="form_headline">Sign up</h1>
      <form
        data-error="<%= err %>"
        class="form_box"
        action="/signup"
        method="post"
        novalidate
      >
        <input
          type="text"
          id="username"
          name="name"
          required
          pattern="[a-zA-Z0-9]{3,12}"
          placeholder="Username *"
        />
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="Email *"
        />
        <input
          type="password"
          id="password"
          name="password"
          required
          pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
          placeholder="Password *"
        />
      </form>
      <button class="form_submit" onclick="submit_form()">Sign Up</button>
      <p class="form_more">Already have an account? <a href="#">Log in</a></p>
    </div>
    <div class="error_box hidden">
      <img src="media/svg/error.svg" alt="" />
      <p id="error_msg">Something went wrong</p>
    </div>
    <script>
        const box = document.querySelector(".error_box"); // use querySelector instead
        const error = document.getElementById("error_msg"); // use getElementById instead
        function close() {
          setTimeout(() => {
            box.classList.add("hidden");
          }, 2000);
        }
      function submit_form() {
        const username = document.getElementById("username").value;
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
  

        if (!username) {
          error.innerText = "Username is required";
          box.classList.remove("hidden");
          close();
        } else if (username.length < 3) {
          error.innerText = "Username is too short";
          box.classList.remove("hidden");
          close();
        } else if (!/^[a-zA-Z0-9]+$/.test(username)) {
          error.innerText =
            "Username should contain only alphanumeric characters.";
          box.classList.remove("hidden");
          close();
        } else if (!email) {
          error.innerText = "Email is required";
          box.classList.remove("hidden");
          close();
        } else if (email.indexOf("@") === -1 || email.indexOf(".") === -1) {
          error.innerText = "Email is not valid";
          box.classList.remove("hidden");
          close();
        } else if (!password) {
          error.innerText = "Password is required";
          box.classList.remove("hidden");
          close();
        } else if (password.length < 9) {
          error.innerText = "Password is too short";
          box.classList.remove("hidden");
          close();
        } else if (
          !/[a-z]/.test(password) ||
          !/[A-Z]/.test(password) ||
          !/[^A-Za-z0-9]/.test(password)
        ) {
          error.innerText =
            "Password should contain at least one uppercase letter, one lowercase letter, and one special character.";
          box.classList.remove("hidden");
          close();
        } else {
          document.querySelector(".form_box").submit();
        }
      }
    //   page load errors
      window.addEventListener("load", function () {
        const err = document
          .querySelector(".form_box")
          .getAttribute("data-error");
        if (err == "error-1") {
          error.innerText = "Username already exists";
          box.classList.remove("hidden");
          close();
        }
        else if (err == "error-2") {
          error.innerText = "eamil already exists";
          box.classList.remove("hidden");
          close();
        }
        else if (err == "error-3") {
          error.innerText = "Something went wrong";
          box.classList.remove("hidden");
          close();
        }
      });
    </script>
  </body>
</html>
